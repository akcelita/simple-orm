{
    "extends": "airbnb-base",
    "rules": {
        "indent": ["error", 4],
        "global-require": 0,
        "max-len": 0,
        "no-console": 0,
        "no-unused-expressions": 0,
        "no-param-reassign": 0,
        "no-else-return": ["error", { "allowElseIf": true }],
        "no-bitwise": ["error", { "int32Hint": true }]
    },
    "globals": {
        "describe",
        "it",
        "before",
        "beforeEach",
        "afterEach"
    }
}
